<div class="container">
    <div class="row justify-content-center text-center">
        <div class="col-md-8">
            <img id="burger-img" src="/assets/burger.png" alt="A juicy hamburger">

            <h1>Eat Da Burger!</h1>
            <br>
            <div class="row justify-content-center">
                <div class="col-md-5 m-4 p-3 burger-el text-start">
                    <h3>Burgers Ready:</h3>

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        {{> burgers/burger-block devoured=true}}
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>

                <div class="col-md-5 m-4 p-3 text-start burger-el">

                    <h3>Burgers Eaten:</h3>

                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        {{> burgers/burger-block devoured=false}}
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>

            </div>

            <div class="row justify-content-center">
                <div class="col-md-4 burger-el p-3">
                    <h3>Add a Burger</h3>
                    <form id="create-form">

                        <div class="form-group">
                            <label for="burger">Burger Name:</label>
                            <input type="text" id="burger" name="burger">
                        </div>

                        <button type="submit">Add Burger</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>